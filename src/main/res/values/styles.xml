<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="list_multi_image_view">
        <item name="android:layout_width">@dimen/list_multi_pic_height</item>
        <item name="android:layout_height">@dimen/list_multi_pic_width</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_margin">2.5dp</item>
        <item name="android:contentDescription">@string/weibo_pic</item>
    </style>

    <style name="settings_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?settings_divider_color</item>
    </style>

    <style name="settings_divider_wide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">?settings_divider_wide_color</item>
    </style>

    <style name="settings_label_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/settings_item_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="settings_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:paddingLeft">@dimen/settings_item_margin</item>
        <item name="android:paddingRight">@dimen/settings_item_margin</item>
        <item name="android:background">?item_background</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="action_button" parent="android:Widget.ActionButton">
        <item name="android:minWidth">@dimen/action_button_min_width</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:scaleType">center</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="text_appearance_action_bar_menu">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="drawer_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/drawer_button_background</item>
    </style>

</resources>
